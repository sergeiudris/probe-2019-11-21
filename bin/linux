#!/bin/bash

install(){
    sudo apt update 
    sudo apt install -y net-tools  
}   


add_group(){
  sudo usermod -aG $1 $USER
}

list_groups(){
  groups $USER
}

list_ports(){
  sudo lsof -i -P -n | grep LISTEN 
  sudo netstat -tulpn | grep LISTEN
}

install_yarn(){
  curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | sudo apt-key add -
  echo "deb https://dl.yarnpkg.com/debian/ stable main" | sudo tee /etc/apt/sources.list.d/yarn.list
  sudo apt-get update && sudo apt-get -y install yarn
}

remove_java_11(){
  # sudo rm -r /usr/lib/jvm/java-11-oracle
  sudo apt-get remove openjdk-11-jdk
}

java8(){
  sudo apt-get update && \
  sudo apt-get install -y openjdk-8-jdk
}

jvm_dir(){
  ls /usr/lib/jvm
}

alternatives(){
  sudo update-alternatives --config java
}

lein283(){
  rm /usr/local/bin lein
  wget https://raw.githubusercontent.com/technomancy/leiningen/2.8.3/bin/lein
  sudo mv lein /usr/local/bin/
  chmod +x /usr/local/bin/lein

}

emacs(){
  # http://ubuntuhandbook.org/index.php/2019/04/gnu-emacs-26-2-released-install-in-ubuntu-18-04/
  sudo add-apt-repository ppa:kelleyk/emacs
  sudo apt update
  sudo apt install emacs26
}

"$@"